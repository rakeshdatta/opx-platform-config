<mac-address-allocation>
    <application name="interface">
        <mac-range type="management" base-offset="0" offset-range="1" />
        <mac-range type="front-panel" base-offset="1" offset-range="72" />
        <mac-range type="lag" base-offset="73" offset-range="128" />
        <mac-range type="vlan" base-offset="201" offset-range="1" />
        <mac-range type="virtual-network" base-offset="202" offset-range="2" />
    </application>
    <application name="fc">
        <mac-range type="fcf" base-offset="255" offset-range="1" />
    </application>
    <application name="vrf">
        <mac-range type="routing" base-offset="256" offset-range="1" />
    </application>
    <!-- S4148U variant uses offset 255 for FCF MAC -->
</mac-address-allocation>
